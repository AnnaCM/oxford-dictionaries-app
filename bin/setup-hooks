#!/bin/sh

# Ensure the script fails on error
set -e

echo "Activating Git hooks..."

# Make sure hook files are executable
chmod +x .githooks/*

# Tell Git to use the committed hooks directory
git config core.hooksPath .githooks

echo "Git hooks are now active."
echo ""
echo "✔ Pre-commit hook enabled"
echo "✔ Code style will be fixed automatically"
echo "✔ PHP syntax will be checked before committing"
